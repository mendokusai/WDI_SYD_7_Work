<h1><%= @post["title"] %></h1>
<h4>By <%= @post["first_name"] %> <%= @post["last_name"] %> on <%= @post["date"] %></h4>

<p><%= @post["post"] %></p>

<hr>

<form action="/posts/<%= @post["id"] %>" method="POST">
  <input type="hidden" name="_method" value="PUT">

  <p>
    <label for="title">Title</label><br>
    <input type="text" name="title" id="title" value="<%= @post["title"] %>">
  </p>
  <p>
    <label for="date">Created on</label><br>
    <input type="text" name="date" id="date" value="<%= @post["date"] %>" placeholder="2014-11-25">
  </p>
  <p>
    <label for="author_id">Author</label><br>
    <select name="author_id" id="author_id">
      <% @authors.each do |author| %>
      <option value="<%= author["id"] %>"<%= @post["author_id"] == author["id"] ? ' selected' : '' %>>
        <%= author["first_name"] + " " + author["last_name"] %>
      </option>
      <% end %>
    </select>
  </p>
  <p>
    <label for="post">Edit Post</label><br>
    <textarea name="post" id="post"><%= @post["post"] %></textarea>
  </p>
  <p>
    <input type="submit" value="Update Post">
  </p>
</form>