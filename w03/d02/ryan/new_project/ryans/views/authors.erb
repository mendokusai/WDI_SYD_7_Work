<p>
  <a href="/authors/new">Add Author</a>
</p>

<ul>
<% @authors.each do |author| %>
  <li style="line-height: 3em;">
    <%= author["first_name"] + " " + author["last_name"] %>

    <span style="padding: 10px;"><a href="http://twitter.com/<%= author["twitter"] %>"><img src="/images/twitter.png"></a> <a href="http://<%= author["website"] %>"><img src="/images/www.png"></a> <a href="/authors/<%= author["id"] %>/edit">Edit Author Details</a> |
    <form action="/authors/<%= author["id"] %>" method="POST" style="display: inline;">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="Destroy">
    </form></span>
  </li>
<% end %>
</ul>