<form action="/authors/<%= @author["id"] %>" method="POST">
  <input type="hidden" name="_method" value="PUT">

  <p>
    <label for="first_name">First Name</label><br>
    <input type="text" name="first_name" id="first_name" value="<%= @author["first_name"] %>">
  </p>
  <p>
    <label for="last_name">Last Name</label><br>
    <input type="text" name="last_name" id="last_name" value="<%= @author["last_name"] %>">
  </p>
  <p>
    <label for="bio">Bio</label><br>
    <textarea name="bio" id="bio"><%= @author["bio"] %></textarea>
  </p>
  <p>
    <label for="website">Website</label><br>
    <input type="text" name="website" id="website" value="<%= @author["website"] %>">
  </p>
  <p>
    <label for="twitter">Twitter</label><br>
    <input type="text" name="twitter" id="twitter" value="<%= @author["twitter"] %>">
  </p>
  <p>
    <input type="submit" value="Update Author">
  </p>
</form>