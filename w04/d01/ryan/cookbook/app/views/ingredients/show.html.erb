<%= image_tag @ingredient.image %>

<h2><%= @ingredient.name %></h2>
<ul>
<li>Measure: <%= @ingredient.measurement %></li>
<li>Cost: <%= @ingredient.cost %></li>
</ul>

<%= link_to 'Back', ingredients_path %>
<%= link_to 'Edit', edit_ingredient_path(@ingredient) %>
<%= link_to 'Delete', ingredient_path(@ingredient), method: :delete, data: { confirm: 'Are you sure?'} %>